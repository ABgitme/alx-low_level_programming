# Compiler and Flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source Files
SRC = main.c school.c
OBJ = $(SRC:.c=.o)

# Executable Name
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

# Executable Compilation
$(NAME): m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Cleaning Rules
clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all